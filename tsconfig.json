{
  "compilerOptions": {
    "target": "ES2020",           // Target modern JS
    "module": "CommonJS",         // Use CommonJS for Node.js
    "strict": true,               // Enable strict type checking
    "esModuleInterop": true,      // Allow default import from modules with no default export
    "skipLibCheck": true,         // Skip checking .d.ts files (faster build)
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",           // Output directory for compiled JS
    "rootDir": "./src",           // Source code directory
    "resolveJsonModule": true     // Support importing JSON files
  },
  "include": ["src/**/*.ts"],      // Include all TypeScript files in src
  "exclude": ["node_modules"]      // Exclude node_modules folder
}
